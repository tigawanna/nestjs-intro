generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Ninja {
  id    Int     @default(autoincrement()) @id
  name  String?
  weapons Weapon[]
}

model Weapon {
  id        Int      @default(autoincrement()) @id
  title     String
  content   String?
  published Boolean? @default(false)
  author    Ninja?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}
